import java.io.*;
import java.util.*;

public class ex2 {
    
 float average_(int size)
{
Vector<Integer> v=new Vector<Integer>(size);
for (int i=0;i<size;i++)
{
    v.add(0);
}
float average=v.size();
average=average/2;
System.out.println(average);

return average;
}

    public static void main(String args[])
    {
        ex2 obj=new ex2();
        Scanner s=new Scanner(System.in);
        int size=s.nextInt();
        obj.average_(size);


    }
}
